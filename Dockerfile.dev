# Use the official Bun image
FROM oven/bun:1

WORKDIR /app

# Copy package files
COPY package.json bun.lock ./
COPY prisma ./prisma/

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Verify Prisma client was generated
RUN ls -la src/database/prisma/ || echo "Prisma client directory not found"

# Expose port
EXPOSE 4000

# Start the development server with hot reload
CMD ["sh", "-c", "mkdir -p src/database && bun run db:generate && bun run db:migrate:deploy && bunx prisma db seed && bun run dev"]