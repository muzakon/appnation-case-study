{
  "name": "appnation-case-study",
  "version": "1.0.50",
  "scripts": {
    "test": "bun tests/run.ts",
    "test:watch": "bun tests/run.ts --watch",
    "test:e2e": "bun tests/run.ts tests/e2e",
    "test:setup": "bunx prisma generate --config=tests/prisma.config.ts && bunx prisma db push --config=tests/prisma.config.ts --accept-data-loss",
    "dev": "bun run --watch src/server.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "bunx tsc --noEmit",
    "prepare": "husky",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "db:generate": "prisma generate"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.14",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "ai": "^6.0.49",
    "elysia": "^1.4.22",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "bun-types": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prisma": "^7.3.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "module": "src/server.js"
}
